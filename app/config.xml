<?xml version='1.0' encoding='utf-8'?>
<widget id="org.derail.derail" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DeRail</name>
    <description>
        Go out of your rails. And learn something useful.
    </description>
    <author email="develop@altersign.com" href="http://cordova.io">
        Saarbr√ºcken Hackathon team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<icon src="www/img/AppIcon/ldpi.png" density="ldpi" />
        <icon src="www/img/AppIcon/mdpi.png" density="mdpi" />
        <icon src="www/img/AppIcon/hdpi.png" density="hdpi" />
        <icon src="www/img/AppIcon/xhdpi.png" density="xhdpi" />
        <icon src="www/img/AppIcon/xxhdpi.png" density="xxhdpi" />
        <icon src="www/img/AppIcon/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="~2.4.1" />
    <engine name="android" spec="~6.1.2" />
</widget>
